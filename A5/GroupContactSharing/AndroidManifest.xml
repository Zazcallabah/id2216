<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.ict.id2216.groupcontactsharing"
    android:versionCode="1"
    android:versionName="1.0" >
	
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="GroupContactSharingApplication">
        <activity
            android:name="se.kth.ict.id2216.groupcontactsharing.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.kth.ict.id2216.groupcontactsharing.EditDataActivity"
            android:label="@string/title_activity_edit_data" >
        </activity>
        <activity
            android:name="se.kth.ict.id2216.groupcontactsharing.IdentifyGroupActivity"
            android:label="@string/title_activity_identify_group" >
        </activity>
        <activity
            android:name="se.kth.ict.id2216.groupcontactsharing.SelectReceiversActivity"
            android:label="@string/title_activity_select_receivers" >
        </activity>
        <activity
            android:name="se.kth.ict.id2216.groupcontactsharing.ImportDataActivity"
            android:label="@string/title_activity_import_data" >
        </activity>
    </application>
</manifest>