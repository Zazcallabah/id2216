<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity" >

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/share"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/nameCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_below="@+id/nameTextView"
        android:text="@string/sample_name"
        android:checked="true" />

    <CheckBox
        android:id="@+id/emailCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameCheckBox"
        android:layout_below="@+id/nameCheckBox"
        android:text="@string/sample_email"
        android:checked="true" />

    <CheckBox
        android:id="@+id/phoneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailCheckBox"
        android:layout_below="@+id/emailCheckBox"
        android:text="@string/sample_phone"
        android:checked="true" />

    <CheckBox
        android:id="@+id/facebookCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneCheckBox"
        android:layout_below="@+id/phoneCheckBox"
        android:text="@string/sample_facebook"
        android:checked="true" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebookCheckBox"
        android:layout_alignRight="@+id/facebookCheckBox"
        android:layout_below="@+id/facebookCheckBox"
        android:onClick="onEditButton_Click"
        android:text="@string/edit" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editButton"
        android:layout_alignRight="@+id/editButton"
        android:layout_below="@+id/editButton"
        android:onClick="onShareButton_Click"
        android:text="@string/share" />

</RelativeLayout>